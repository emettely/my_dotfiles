alias pubkey="more ~/.ssh/id_rsa.pub | pbcopy | printf '=> Public key copied to pasteboard.\n'";
alias sb6="ssh <sandbox6>"
alias sb7="ssh <sandbox7>"
alias stree='/Applications/SourceTree.app/Contents/Resources/stree'
alias zshrc='. ~/.zshrc'
alias irc='. ~/.startIRC'
alias cpr='rsync -a --stats --progress'
alias now='date +"%T"'
alias df='df -H'
alias du='du -ch'


export MAVEN_OPTS="-Djavax.net.ssl.trustStore=/Users/<user>/workspace/jssecacerts -Djavax.net.ssl.keyStore=<certPath> -Djavax.net.ssl.keyStorePassword=<password> -Djavax.net.ssl.keyStoreType=PKCS12"
export JAVA_HOME=$(/usr/libexec/java_home -v 1.8)

man() {
  env \
    LESS_TERMCAP_mb=$(printf "\e[1;31m") \
    LESS_TERMCAP_md=$(printf "\e[1;31m") \
    LESS_TERMCAP_me=$(printf "\e[0m") \
    LESS_TERMCAP_se=$(printf "\e[0m") \
    LESS_TERMCAP_so=$(printf "\e[1;44;33m") \
    LESS_TERMCAP_ue=$(printf "\e[0m") \
    LESS_TERMCAP_us=$(printf "\e[1;32m") \
    man "$@"
}

